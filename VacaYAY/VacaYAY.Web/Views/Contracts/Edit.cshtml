@using VacaYAY.Data.DataTransferObjects.Contracts;
@using VacaYAY.Data.Enums;
@model ContractEdit
@{
    ViewData["Title"] = "Edit contract";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-sm w-25">
    <h4>Edit employee contract</h4>
    <p>Enter contract data and upload document.</p>
    <hr />
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="DocumentUrl" />
        <div class="form-floating mb-3">
            <input asp-for="ContractNumber" class="form-control" aria-required="true" placeholder="Contract Number" />
            <label asp-for="ContractNumber"></label>
            <span asp-validation-for="ContractNumber" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="StartDate" type="date" class="form-control" aria-required="true" placeholder="Start Date" />
            <label asp-for="StartDate"></label>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="EndDate" type="date" class="form-control" aria-required="true" placeholder="End Date" />
            <label asp-for="EndDate"></label>
            <span asp-validation-for="EndDate" class="text-danger"></span>

        </div>
        <div class="form-floating mb-3">
            @Html.DropDownListFor(m => m.ContractType, Html.GetEnumSelectList<ContractType>(),
            new {@class="form-control dropdown-toggle"})
            <label asp-for="ContractType"></label>
            <span asp-validation-for="ContractType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Document">Add new document</label>
            <br />
            <small>
                <strong>Note:</strong> this will override
                <a asp-action="PreviewDocument" asp-controller="Contracts" asp-route-id="@Model.ID"> current document</a>
                saved for this contract.
            </small>
            <input asp-for="Document" class="form-control" type="file" accept=".pdf,.doc,.docx" id="formFile">
            <span asp-validation-for="Document" class="text-danger"></span>
        </div>
        <input type="submit" value="Save changes" class="btn btn-primary btn-block w-100" />
    </form>
</div>