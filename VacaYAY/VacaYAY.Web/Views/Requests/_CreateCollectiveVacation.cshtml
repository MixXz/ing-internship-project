@using VacaYAY.Data.DataTransferObjects;
@model CollectiveVacationCreate

<div class="modal fade" id="createCollectiveVacationModal" tabindex="-1" aria-labelledby="createCollectiveVacationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCollectiveVacationModalLabel">Create collective vacation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createCollectiveVacationForm" asp-controller="Requests" asp-action="CreateCollectiveVacation" method="post">
                    <div class="form-floating mb-3">
                        <input id="startDate" asp-for="StartDate" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" value="" class="form-control" aria-required="true" placeholder="Start Date" />
                        <label asp-for="StartDate"></label>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input id="endDate" asp-for="EndDate" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" value="" class="form-control" aria-required="true" placeholder="Start Date" />
                        <label asp-for="EndDate"></label>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Comment" class="control-label"></label>
                        <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var modal = document.getElementById('createCollectiveVacationModal');
    var openModalButton = document.querySelector('[data-bs-target="#createCollectiveVacationModal"]');

    var closeModalButton = document.querySelector('#createCollectiveVacationModal .btn-close');

    openModalButton.addEventListener('click', () => {
        modal.style.display = 'block';
    });

    closeModalButton.addEventListener('click', () => {
        modal.style.display = 'none';
    });
</script>