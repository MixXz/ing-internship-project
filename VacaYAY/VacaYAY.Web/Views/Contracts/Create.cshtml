@using VacaYAY.Data.DataTransferObjects;
@using VacaYAY.Data.Enums;
@model ContractCreate
@{
}

<div class="container-sm w-25">
    <h5>Add employee contract</h5>
    <p>Enter contract data and upload document.</p>
    <hr />
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="EmployeeId" value="@ViewBag.Id" />
        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
        <div class="form-floating mb-3">
            <input asp-for="ContractNumber" class="form-control" aria-required="true" placeholder="Contract Number" />
            <label asp-for="ContractNumber"></label>
            <span asp-validation-for="ContractNumber" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="StartDate" type="date" class="form-control" aria-required="true" placeholder="Start Date" />
            <label asp-for="StartDate"></label>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="EndDate" type="date" class="form-control" aria-required="true" placeholder="End Date" />
            <label asp-for="EndDate"></label>
            <span asp-validation-for="EndDate" class="text-danger"></span>

        </div>
        <div class="form-floating mb-3">
            @Html.DropDownListFor(m => m.ContractType, Html.GetEnumSelectList<ContractType>(),
            new {@class="form-control dropdown-toggle"})
            <label asp-for="ContractType"></label>
            <span asp-validation-for="ContractType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Document"></label>
            <input asp-for="Document" class="form-control" type="file" accept=".pdf,.doc,.docx" id="formFile">
            <span asp-validation-for="Document" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Save contract</button>
        <div>
                <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>