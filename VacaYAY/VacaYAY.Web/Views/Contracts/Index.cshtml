@using VacaYAY.Data.DataTransferObjects;
@using VacaYAY.Data.DataTransferObjects.Contracts;
@model ContractView;
@{
    ViewData["Title"] = "Contracts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <h3>Manage employee contracts</h3>
    <hr />    
    <span>Employee: <strong>@Model.Employee.Name </strong></span>
    <div class="col">
        <a asp-action="Create" asp-route-id="@Model.Employee.Id" class="btn btn-success btn-block w-100"><i class="bi bi-plus-circle"></i> Add new</a>
    </div>
    <div class="col-10">
        <table class="table table-striped">
            <thead class="table-primary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Contracts.First().ContractNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contracts.First().ContractType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contracts.First().StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contracts.First().EndDate)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contracts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @(item.EndDate is null ? "Not set" : @Html.DisplayFor(modelItem => item.EndDate))
                        </td>
                        <td class="text-center" style="width: 1%; white-space: nowrap;">
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-fill"></i> Edit</a>
                            <a asp-action="PreviewDocument" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i> View</a>
                            <a asp-action="DownloadDocument" asp-route-id="@item.ID" class="btn btn-sm btn-success"><i class="bi bi-download"></i> Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>