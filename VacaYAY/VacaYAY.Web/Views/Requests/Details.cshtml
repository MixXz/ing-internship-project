@using VacaYAY.Data.Enums;
@model VacaYAY.Data.Entities.Request

@{
    ViewData["Title"] = "Request details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-sm">
    <h1>Request details</h1>
    <hr />
    <div class="row">
        <div class="col">
            <h4>Request</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LeaveType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LeaveType.Caption)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
                @if (User.IsInRole(nameof(Roles.Admin)))
                {
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CreatedBy.Name)
                    </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Comment)
                </dt>
                <dd class="col-10">
                    @(Model.Comment is null ?
                        "No comment provided"
                        :
                        @Html.DisplayFor(model => model.Comment)
                        )
                </dd>
            </dl>
        </div>

        <div class="col">
            <h4>Response</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Status:
                </dt>
                <dd class="col-sm-10">
                    @(Model.Response is not null ?
                        Model.Response.IsApproved ? "Approved" : "Not approved"
                        :
                        "Pending review"
                        )
                </dd>
                @if (Model.Response is not null)
                {
                    @if (User.IsInRole(nameof(Roles.Admin)))
                    {
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Response!.ReviewedBy)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Response!.ReviewedBy.Name)
                        </dd>
                    }
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Response!.Comment)
                    </dt>
                    <dd class="col-10">
                        @(Model.Response.Comment is null ?
                            "No comment provided"
                            :
                            @Html.DisplayFor(model => model.Response!.Comment)
                            )
                    </dd>
                }
            </dl>
        </div>
    </div>
    <div class="d-flex mb-5 float-end">
        @if (User.IsInRole(nameof(Roles.Admin)) && Model.Response is null)
        {
            <form asp-action="CreateResponse" asp-route-id="RequestId">
                <input type="submit" value="Respond" class="btn btn-primary" style="margin-right:10px" />
            </form>
        }

        <a asp-action="EditRequest" asp-route-id="@Model.ID" class="btn btn-outline-primary" style="margin-right:10px">Edit request</a>

        @if (Model.Response is null)
        {
            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete request" class="btn btn-danger" />
            </form>
        }
    </div>
</div>
