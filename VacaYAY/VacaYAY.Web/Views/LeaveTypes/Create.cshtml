@model VacaYAY.Data.Entities.LeaveType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-sm w-25">
    <h2>Create</h2>
    <h4>Create new leave type</h4>
    <hr />
    <form asp-action="Create">
        <div class="form-floating mb-3">
            <input asp-for="Caption" class="form-control" aria-required="true" placeholder="Captions" />
            <label asp-for="Caption"></label>
            <span asp-validation-for="Caption" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Description" class="form-control" aria-required="true" placeholder="Description" />
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block w-100">Create</button>
    </form>
</div>