@using VacaYAY.Data.Entities;
@model IEnumerable<Contract>
@{
    ViewData["Title"] = "Contracts";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var employee = ViewBag.Employee;
}

<div class="row">
    <h2>Manage employee contracts</h2>
    <span>Employee: <strong>@employee.Name </strong></span>
    <hr />
    <div class="col">
        <a asp-action="Create" asp-route-id="@employee.Id" class="btn btn-success btn-block w-100"><i class="bi bi-plus-circle"></i> Add new</a>
    </div>
    <div class="col-10">
        <table class="table table-striped">
            <thead class="table-primary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @(item.EndDate is null ? "Not set" : @Html.DisplayFor(modelItem => item.EndDate))
                        </td>
                        <td class="text-center" style="width: 1%; white-space: nowrap;">
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-fill"></i> Edit</a>
                            <a asp-action="PreviewDocument" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i> View</a>
                            <a asp-action="DownloadDocument" asp-route-id="@item.ID" class="btn btn-sm btn-success"><i class="bi bi-download"></i> Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>