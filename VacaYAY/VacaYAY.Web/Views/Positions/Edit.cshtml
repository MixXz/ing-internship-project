@model VacaYAY.Data.Entities.Position

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-sm w-25">
    <h2>Edit</h2>
    <h4>Edit position data</h4>
    <hr />
    <form asp-action="Edit">
        <input type="hidden" asp-for="ID" />
        <div class="form-floating mb-3">
            <input asp-for="Caption" class="form-control" aria-label="true" />
            <label asp-for="Caption"></label>
            <span asp-validation-for="Caption" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Description" class="form-control" aria-label="true" />
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block w-100">Save changes</button>
    </form>
</div>
