@using VacaYAY.Data.DataTransferObjects;
@using VacaYAY.Data.Entities;
@model RequestCreate
@{
    ViewData["Title"] = "Create Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-sm w-50">
    <h2>Vacation request</h2>
    <h4>Create new vacation request</h4>
    <hr />
    <div class="row">
        <div class="col">
            <form asp-action="CreateRequest">
                @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                <div class="form-floating mb-3">
                    <select class="form-select" name="LeaveTypeID" asp-items="@(new SelectList(ViewBag.LeaveTypes, nameof(LeaveType.ID), nameof(LeaveType.Caption)))"></select>
                    <label for="LeaveTypeID" class="col-sm-2 control-label"> Position </label>
                    <span asp-validation-for="LeaveTypeID" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="StartDate" type="date" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" class="form-control" aria-required="true" placeholder="Start Date" />
                    <label asp-for="StartDate"></label>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="EndDate" type="date" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" class="form-control" aria-required="true" placeholder="End Date" />
                    <label asp-for="EndDate"></label>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <input type="submit" value="Create" class="btn btn-primary mt-3 float-end" />
            </form>
        </div>
    </div>
</div>
