@using VacaYAY.Data.Entities;
@model IEnumerable<Position>
@{
    ViewData["Title"] = "Employee positions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <h3>Manage employee positions</h3>
    <hr />
    <div class="col">
        <a asp-action="Create" class="btn btn-success btn-block w-100"><i class="bi bi-plus-circle"></i> Create new</a>
    </div>
    <div class="col-10">
        <table class="table table-striped">
            <thead class="table-primary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Caption)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Caption)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center" style="width: 1%; white-space: nowrap;">
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-fill small"></i> Edit</a>
                            <input type="hidden" asp-for="@item.ID" />
                            <a class="btn btn-sm btn-danger open-confirm-modal"
                               data-id="@item.ID"
                               data-controller="Positions"
                               data-action="Delete"
                               data-title="Confirm position deletion"
                               data-body-message="Are you sure you want to delete the position <strong> @item.Caption</strong>?">
                                <i class="bi bi-trash small"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>